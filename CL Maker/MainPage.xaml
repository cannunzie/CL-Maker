<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CL_Maker.MainPage"
             Title="CL Maker">

	<StackLayout Margin="20,35,20,25">
		<Label Text="Position Name:"></Label>
		<Entry x:Name="posNameEntry" Placeholder="Full Stack Developer"></Entry>
		<Label Text="Company name:"></Label>
		<Entry x:Name="compNameEntry"></Entry>
		<Label Text="Company address:"></Label>
		<Entry x:Name="compAddressEntry" Placeholder="227 11 Ave SW, Calgary, AB T2R 1R9"></Entry>
		<Label Text="Manager name:"></Label>
		<Entry x:Name="compManagerEntry"></Entry>
		<Label Text="Manager department:"></Label>
		<Entry x:Name="compDeptEntry" Placeholder="IT Department"></Entry>
		<Label Text="Job description:"></Label>
		<Editor x:Name="jobDescriptionEditor"></Editor>

		<Button Text="Create" x:Name="createBtn" Clicked="OnClickCreateBtn"></Button>
	</StackLayout>

</ContentPage>